<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="form-field">
    <div class="form-label">
      <%= form.label :commenter %>
    </div>
    <div class="form-input">
      <%= form.text_field :commenter %>
    </div>
    <div class="form-label">
      <%= form.label :body %>
    </div>
    <div class="form-input">
      <%= form.text_area :body %>
    </div>
  </div>
  <%= form.submit %>
<% end %>